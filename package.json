{
  "name": "@mrmihi/template-kit",
  "version": "1.0.2",
  "description": "A simple template generator which can be invoked via the CLI",
  "main": "src/index.js",
  "bin": {
    "sft": "src/index.js"
  },
  "preferGlobal": true,
  "scripts": {
    "build": "echo \"building skipped\"",
    "bump-version": "bash ../../scripts/bump-version.sh --name=@mrmihi/template-kit",
    "generate": "plop --plopfile src/index.js",
    "lint": "bash ../../scripts/lint.sh",
    "release": "bash ../../scripts/release.sh",
    "test": "echo \"testing skipped\"",
    "submodules:load": "git submodule update --init",
    "submodules:sync": "git submodule update --recursive --remote"
  },
  "type": "module",
  "dependencies": {
    "minimist": "1.2.8",
    "plop": "3.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrmihi/template-kit.git"
  },
  "homepage": "https://github.com/mrmihi/tempalte-kit/blob/main/readme.md",
  "keywords": [
    "utilities",
    "template-generator"
  ],
  "author": "mrmihi",
  "license": "GNU GPLv3",
  "bugs": {
    "url": "https://github.com/mrmihi/template-kit/issues"
  },
  "files": [
    "src/**/**",
    "src/**/.*",
    "src/**/.gitignore"
  ]
}
